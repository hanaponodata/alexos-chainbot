{
  "name": "gui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "test:unit": "jest --testPathPattern=src/__tests__/unit",
    "test:integration": "jest --testPathPattern=src/__tests__/integration",
    "test:performance": "jest --testPathPattern=src/__tests__/performance",
    "test:e2e": "playwright test",
    "electron:dev": "electron .",
    "electron:build": "electron-builder",
    "electron:sign": "electron-builder --mac --sign",
    "electron:notarize": "electron-builder --mac --notarize",
    "app-store:prepare": "node scripts/prepare-app-store.js",
    "app-store:submit": "node scripts/submit-app-store.js",
    "deploy:cdn": "node scripts/deploy-cdn.js",
    "deploy:website": "node scripts/deploy-website.js",
    "update:check": "node scripts/check-updates.js",
    "update:download": "node scripts/download-update.js",
    "update:install": "node scripts/install-update.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "dependencies:check": "npm outdated",
    "dependencies:update": "npm update",
    "dependencies:audit": "npm audit",
    "performance:test": "node scripts/performance-test.js",
    "performance:report": "node scripts/generate-performance-report.js"
  },
  "dependencies": {
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@monaco-editor/react": "^4.7.0",
    "clsx": "^2.0.0",
    "framer-motion": "^11.0.17",
    "fuse.js": "^7.1.0",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.263.1",
    "monaco-editor": "^0.45.0",
    "msw": "^2.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^15.5.0",
    "rehype-highlight": "^7.0.2",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^2.0.0",
    "uuid": "^11.1.0",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.1.8",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.6.0",
    "playwright": "^1.42.1",
    "postcss": "^8.4.32",
    "puppeteer": "^22.4.1",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}
